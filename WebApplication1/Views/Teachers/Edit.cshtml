@model WebApplication1.Models.Teacher

@{
    ViewData["Title"] = "Редактировать преподавателя";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">✏️ Редактировать преподавателя</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="TeacherId" />

                <div class="form-group mb-3">
                    <label asp-for="FullName" class="form-label">ФИО</label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Dob" class="form-label">Дата рождения</label>
                    <input asp-for="Dob" type="date" class="form-control" />
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Gender" class="form-label">Пол</label>
                    <select asp-for="Gender" class="form-select">
                        <option value="">Выберите пол</option>
                        <option value="Мужской" selected="@(Model.Gender == "Мужской")">Мужской</option>
                        <option value="Женский" selected="@(Model.Gender == "Женский")">Женский</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Education" class="form-label">Образование</label>
                    <input asp-for="Education" class="form-control" />
                    <span asp-validation-for="Education" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Category" class="form-label">Категория</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Назад к списку</a>
                    <button type="submit" class="btn btn-success">💾 Сохранить изменения</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
