@model IEnumerable<WebApplication1.Models.Teacher>
@{
    ViewData["Title"] = "Список преподавателей";
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">👩‍🏫 Список преподавателей</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">➕ Добавить преподавателя</a>
        <a asp-action="Archive" class="btn btn-outline-secondary">📦 Архив</a>
    </div>

    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>ФИО</th>
                <th>Дата рождения</th>
                <th>Пол</th>
                <th>Образование</th>
                <th>Категория</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherId</td>
                    <td>@teacher.FullName</td>
                    <td>@teacher.Dob.ToString("dd.MM.yyyy")</td>
                    <td>@teacher.Gender</td>
                    <td>@teacher.Education</td>
                    <td>@teacher.Category</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-warning me-1">✏️</a>
                        <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-info me-1">🔍</a>
                     т
                        <form asp-action="ArchiveTeacher" asp-route-id="@teacher.TeacherId" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-secondary"
                                    onclick="return confirm('Перенести преподавателя «@teacher.FullName» в архив?');">
                                📦 В архив
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
