@model IEnumerable<WebApplication1.Models.Teacher>

@{
    ViewData["Title"] = "Список преподавателей";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        <strong>@TempData["SuccessMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
        <strong>@TempData["ErrorMessage"]</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <h2 class="mb-3 text-center">👩‍🏫 Список преподавателей</h2>

    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-primary">
            ➕ Добавить преподавателя
        </a>
    </div>

    <table class="table table-hover align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>ФИО</th>
                <th>Дата рождения</th>
                <th>Пол</th>
                <th>Образование</th>
                <th>Категория</th>
                <th class="text-center">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacher in Model)
            {
                <tr>
                    <td>@teacher.TeacherId</td>
                    <td>@teacher.FullName</td>
                    <td>@teacher.Dob.ToString("dd.MM.yyyy")</td>
                    <td>@teacher.Gender</td>
                    <td>@teacher.Education</td>
                    <td>@teacher.Category</td>
                    <td class="text-center">
                        <a asp-action="Edit" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-warning me-1">✏️</a>
                        <a asp-action="Details" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-info me-1">🔍</a>
                        <a asp-action="Delete" asp-route-id="@teacher.TeacherId" class="btn btn-sm btn-danger" onclick="return confirm('Удалить преподавателя «@teacher.FullName»?');">🗑️</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
