@model IEnumerable<WebApplication1.Models.TrainingRequest>
@{
    ViewData["Title"] = "Заявки на обучение";
    bool showAll = ViewBag.ShowAll ?? false;
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">📋 Заявки на обучение</h1>

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            @if (showAll)
            {
                <a asp-action="Index" class="btn btn-outline-primary">
                    🔹 Показать только актуальные
                </a>
            }
            else
            {
                <a asp-action="Index" asp-route-showAll="true" class="btn btn-outline-secondary">
                    📅 Показать все заявки
                </a>
            }
        </div>

        <a asp-action="Create" class="btn btn-success">
            ➕ Подать новую заявку
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm">
            Заявок пока нет.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-4">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>№</th>
                        <th>Организация</th>
                        <th>Курс</th>
                        <th>Преподаватель</th>
                        <th>Даты</th>
                        <th class="text-center">Количество участников</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        var isPast = r.EndDate < DateOnly.FromDateTime(DateTime.Today);
                        var rowClass = isPast ? "table-secondary" : "";
                        <tr class="@rowClass">
                            <td>@r.RequestId</td>
                            <td>@r.Org.Name</td>
                            <td>@r.Course.Name</td>
                            <td>@r.Assignment.Teacher.FullName</td>
                            <td>@r.StartDate.ToString("dd.MM.yyyy") — @r.EndDate.ToString("dd.MM.yyyy")</td>
                            <td class="text-center">@r.NumberOfPeople</td>
                            <td class="text-end">
                                <a asp-action="Details" asp-route-id="@r.RequestId"
                                   class="btn btn-sm btn-outline-primary">Подробнее</a>
                                <a asp-action="Edit" asp-route-id="@r.RequestId"
                                   class="btn btn-sm btn-outline-secondary ms-1">Изменить</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
