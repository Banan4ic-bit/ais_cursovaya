@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Удаление курса";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">⚠️ Подтверждение удаления курса</h4>
            @if (Model.IsArchived)
            {
                <span class="badge bg-secondary">Архивирован</span>
            }
            else
            {
                <span class="badge bg-success">Активен</span>
            }
        </div>

        <div class="card-body">
            <div class="alert alert-danger shadow-sm">
                <strong>Внимание!</strong> Это действие нельзя отменить.
                <br />
                Убедитесь, что курс не используется в назначениях преподавателей или заявках.
            </div>

            <dl class="row">
                <dt class="col-sm-4 col-md-3">Название курса:</dt>
                <dd class="col-sm-8 col-md-9 fw-semibold">@Model.Name</dd>

                <dt class="col-sm-4 col-md-3">Тип:</dt>
                <dd class="col-sm-8 col-md-9">@Model.Type</dd>

                <dt class="col-sm-4 col-md-3">Длительность (дней):</dt>
                <dd class="col-sm-8 col-md-9">@Model.Days</dd>

                <dt class="col-sm-4 col-md-3">Вместимость:</dt>
                <dd class="col-sm-8 col-md-9">@(Model.Capacity ?? 0)</dd>

                <dt class="col-sm-4 col-md-3">Цена (без НДС):</dt>
                <dd class="col-sm-8 col-md-9 text-success">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4 col-md-3">Цена (с НДС):</dt>
                <dd class="col-sm-8 col-md-9 text-success">@Model.PriceWithVat.ToString("C")</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="CourseId" />
                <button type="submit" class="btn btn-danger me-2" onclick="return confirm('Вы уверены, что хотите удалить курс «@Model.Name»?');">
                    🗑️ Удалить
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                ⬅ Назад к списку
            </a>
        </div>
    </div>
</div>
