@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Редактировать курс";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">✏️ Редактирование курса</h4>
            @if (Model.IsArchived)
            {
                <span class="badge bg-secondary">Архивирован</span>
            }
            else
            {
                <span class="badge bg-success">Активен</span>
            }
        </div>

        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="CourseId" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-semibold">Название курса</label>
                        <input asp-for="Name" class="form-control" placeholder="Введите название" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label fw-semibold">Тип курса</label>
                        <input asp-for="Type" class="form-control" placeholder="Например: онлайн / офлайн" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Days" class="form-label fw-semibold">Длительность (дней)</label>
                        <input asp-for="Days" type="number" min="1" class="form-control" />
                        <span asp-validation-for="Days" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Capacity" class="form-label fw-semibold">Вместимость</label>
                        <input asp-for="Capacity" type="number" min="1" class="form-control" />
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-semibold">Цена (без НДС)</label>
                        <input asp-for="Price" type="number" step="0.01" min="0" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Цена с НДС (20%)</label>
                        <input id="priceWithVat" class="form-control bg-light" readonly />
                    </div>

                    <div class="col-md-6">
                        <div class="form-check mt-3">
                            <input asp-for="IsArchived" class="form-check-input" type="checkbox" id="archiveCheck" />
                            <label class="form-check-label fw-semibold" for="archiveCheck">
                                Перенести в архив
                            </label>
                        </div>
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        ✅ Сохранить изменения
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        ⬅ Назад
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const priceInput = document.querySelector('[name="Price"]');
        const vatOutput = document.getElementById('priceWithVat');

        function updateVat() {
            const price = parseFloat(priceInput.value) || 0;
            vatOutput.value = (price * 1.2).toFixed(2);
        }

        document.addEventListener('DOMContentLoaded', updateVat);
        priceInput.addEventListener('input', updateVat);
    </script>
}
