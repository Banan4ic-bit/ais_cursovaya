@model WebApplication1.Models.RequestParticipant

@{
    ViewData["Title"] = "Добавить участника";
}

<h2 class="mb-4 text-primary">➕ Добавление участника к заявке №@ViewBag.RequestId</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- RequestId обязательно нужен -->
    <input type="hidden" asp-for="RequestId" />

    <div class="mb-3">
        <label asp-for="FullName" class="form-label">ФИО</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position" class="form-label">Должность</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success w-100">💾 Добавить</button>
</form>

<div class="mt-3">
    <a asp-controller="TrainingRequests"
       asp-action="Details"
       asp-route-id="@ViewBag.RequestId"
       class="btn btn-secondary">← Назад к заявке</a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
