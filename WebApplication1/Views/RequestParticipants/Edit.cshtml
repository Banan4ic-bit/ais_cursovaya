@model WebApplication1.Models.RequestParticipant
@{
    ViewData["Title"] = "Редактирование участника";
}

<h2 class="text-primary mb-4">
    ✏️ Редактирование участника —
    заявка №@Model.RequestId
</h2>

@if (ViewBag.RequestInfo != null)
{
    <div class="alert alert-secondary">
        <strong>@ViewBag.RequestInfo</strong>
    </div>
}

<div class="card shadow-sm p-4">
    <form asp-action="Edit">
        <input type="hidden" asp-for="ParticipantId" />
        <input type="hidden" asp-for="RequestId" />

        <div class="form-group mb-3">
            <label asp-for="FullName" class="form-label">ФИО</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Position" class="form-label">Должность</label>
            <input asp-for="Position" class="form-control" />
            <span asp-validation-for="Position" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success w-100 mt-2">
            💾 Сохранить изменения
        </button>
    </form>
</div>

<div class="mt-3">
    <a asp-controller="TrainingRequests"
       asp-action="Details"
       asp-route-id="@Model.RequestId"
       class="btn btn-secondary">
        ← Назад к заявке
    </a>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
