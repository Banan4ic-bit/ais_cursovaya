@model WebApplication1.Models.TeacherAssignment
@{
    ViewData["Title"] = "Детали назначения";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-secondary text-white">
            <h3 class="mb-0">🔍 Детали назначения</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Курс:</dt>
                <dd class="col-sm-9">@Model.Course?.Name</dd>

                <dt class="col-sm-3 fw-semibold">Преподаватель:</dt>
                <dd class="col-sm-9">@Model.Teacher?.FullName</dd>

                <dt class="col-sm-3 fw-semibold">Дата начала:</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3 fw-semibold">Дата окончания:</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Edit" asp-route-id="@Model.AssignmentId" class="btn btn-outline-primary">✏️ Редактировать</a>
            <a asp-action="Index" class="btn btn-outline-secondary">← Назад к списку</a>
        </div>
    </div>
</div>
