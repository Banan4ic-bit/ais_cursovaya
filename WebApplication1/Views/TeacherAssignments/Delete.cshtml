@model WebApplication1.Models.TeacherAssignment
@{
    ViewData["Title"] = "Удалить назначение";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">🗑 Удаление назначения</h3>
        </div>
        <div class="card-body">
            <p class="text-danger fw-semibold">Вы уверены, что хотите удалить это назначение?</p>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Курс:</dt>
                <dd class="col-sm-9">@Model.Course?.Name</dd>

                <dt class="col-sm-3 fw-semibold">Преподаватель:</dt>
                <dd class="col-sm-9">@Model.Teacher?.FullName</dd>

                <dt class="col-sm-3 fw-semibold">Даты:</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd") — @Model.EndDate.ToString("yyyy-MM-dd")</dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <form asp-action="Delete">
                <input type="hidden" asp-for="AssignmentId" />
                <button type="submit" class="btn btn-danger">Удалить</button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
        </div>
    </div>
</div>
