@model IEnumerable<WebApplication1.Models.Organization>

@{
    ViewData["Title"] = "Организации";
}

<div class="container mt-4">
    <h2 class="mb-3">Организации</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Добавить организацию
        </a>

        <form method="get" class="d-flex" asp-action="Index">
            <input type="text" name="searchString" class="form-control me-2" placeholder="Поиск по названию..." />
            <button type="submit" class="btn btn-outline-secondary">Поиск</button>
        </form>
    </div>

    <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Название</th>
                <th>Адрес</th>
                <th>Телефон</th>
                <th>Email</th>
                <th style="width: 160px;">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OrgId</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.OrgId" class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-square"></i> Изменить
                        </a>
                        <button class="btn btn-sm btn-danger"
                                data-bs-toggle="modal"
                                data-bs-target="#deleteModal"
                                data-org-id="@item.OrgId"
                                data-org-name="@item.Name">
                            <i class="bi bi-trash"></i> Удалить
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Модальное окно удаления -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel">Удаление организации</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                </div>
                <div class="modal-body">
                    <p>Вы уверены, что хотите удалить организацию <strong id="orgName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <form id="deleteForm" method="post" asp-action="Delete">
                        <input type="hidden" name="id" id="orgIdToDelete" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="mt-3">
        <nav>
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var orgId = button.getAttribute('data-org-id');
            var orgName = button.getAttribute('data-org-name');

            document.getElementById('orgIdToDelete').value = orgId;
            document.getElementById('orgName').textContent = orgName;
        });
    </script>
}
